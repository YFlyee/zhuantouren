<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_54"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_01"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_53"
        android:background="@color/bg_tab"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <io.github.rockerhieu.emojicon.EmojiconEditText
            android:id="@+id/comment"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/comment_edit_bg"
            android:gravity="center_vertical"
            android:hint="你怎么看?"
            android:inputType="text"
            android:paddingBottom="@dimen/dp_00"
            android:paddingLeft="@dimen/dp_05"
            android:paddingRight="@dimen/dp_05"
            android:paddingTop="@dimen/dp_00"
            android:textColor="@color/text_color_dark"
            android:textColorHighlight="@color/text_light_gray"
            android:textColorHint="@color/text_light_gray"
            android:textSize="@dimen/sp_13" />


        <Button
            android:id="@+id/send"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/btn_orange"
            android:text="@string/send"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>
</LinearLayout>